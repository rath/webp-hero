{
	"name": "webp-hero",
	"version": "0.1.0",
	"description": "webp image format polyfill for browsers",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"private": true,
	"files": [
		"dist",
		"libwebp/dist/webp.js",
		"libwebp/dist/webp.d.ts",
		"libwebp/dist/webp.cjs.js"
	],
	"scripts": {
		"prepare": "yon run build",
		"build": "yon run compile && yon run polyfills",
		"compile": "rm -f dist/*.d.ts && tsc",
		"watch": "rm -f dist/*.d.ts && tsc --watch",
		"polyfills": "cp polyfills.js dist"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/webp-hero.git"
	},
	"keywords": [
		"webp",
		"polyfill",
		"webp-polyfill",
		"image-conversion"
	],
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/chase-moskal/webp-hero/issues"
	},
	"homepage": "https://github.com/chase-moskal/webp-hero#readme",
	"dependencies": {},
	"devDependencies": {
		"replace": "^1.1.5",
		"typescript": "^3.7.5",
		"yarn-or-npm": "^3.0.1"
	}
}
